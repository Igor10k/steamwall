GREEN = #4d6a27

*
	-webkit-font-smoothing antialiased

html
button
input
select
textarea
	font 12px/1.4 "Helvetica Neue", "Helvetica", "Arial", sans-serif

html
body
	height 100%

body
	cursor default
	background linear-gradient(#333, #000)
	overflow hidden
	color #FFF

// HEADINGS
h1
	margin 0 0 20px
	font-size 27px
	color #666
	text-align center

// TYPOGRAPHY
p
	margin 0
	font-size 11px; line-height 16px

// LINKS
a
	color GREEN

	&:hover
		color darken(@color, 20%)

// BUTTONS
.btn
	box-sizing border-box
	display inline-block
	size 100% 40px
	padding 11px 12px
	border-radius 2px
	border none
	background GREEN
	font-size 14px; line-height 18px
	text-decoration none
	color #FFF

	&:hover
	&:focus
		background darken(GREEN, 10%)
		color #FFF

// FORM
.input-text
	box-sizing border-box
	width 100%
	height 40px
	padding 5px 10px
	background none
	border 1px solid GREEN
	border-radius 2px
	outline: none
	font-size 14px
	line-height 18px
	text-align center

	&::-webkit-input-placeholder
		color #666

// CANVAS
#canvas
	absolute top 50% left 50%
	transform translate(-50%, -50%)

// PANEL
.panel
	absolute top 50% left 50%; z-index 10
	width 220px
	padding 20px
	border-radius 5px
	background rgba(#000,0.7)
	transform translate(-50%, -50%)
	text-align center
	color #DDD

.bottom-text
	position absolute
	right 0; bottom 0; left 0
	padding 0 20px 10px
	font-size 11px
	text-align center
	color rgba(#FFF, 0.5)
